/* =========================================================
   CyTube + Saved Playlists/Drive DB — Glass UI (v1.0)
   Matches the “glass” aesthetic: soft blur, frosted panes,
   neon accents, rounded chips, low-ink typography.
   ========================================================= */

/* ---------- Design tokens ---------- */
:root {
  --bg0: #0b0f14;                 /* deep canvas */
  --bg1: rgba(19, 24, 31, 0.55);   /* frosted panel */
  --bg2: rgba(19, 24, 31, 0.78);   /* denser panel */
  --glass: rgba(255, 255, 255, 0.06);
  --glass-strong: rgba(255, 255, 255, 0.12);
  --border: rgba(255,255,255,0.14);
  --border-soft: rgba(255,255,255,0.08);
  --text: #e6edf3;
  --text-soft: #c2c7ce;
  --muted: #9aa3ad;

  --accent: #7cf6ff;              /* cyan glass */
  --accent-2: #a78bfa;            /* violet edge */
  --danger: #ff6b6b;
  --success: #5df2a2;
  --warn: #ffd166;

  --radius-lg: 16px;
  --radius-xl: 22px;
  --radius-pill: 999px;

  --shadow-1: 0 8px 24px rgba(0,0,0,.35);
  --shadow-2: 0 14px 40px rgba(0,0,0,.45);

  --blur: blur(14px);
  --blur-strong: blur(22px);

  --chip-bg: rgba(255, 255, 255, 0.08);
  --chip-bd: rgba(255, 255, 255, 0.14);

  --focus: 0 0 0 2px rgba(124,246,255,.55), 0 0 0 6px rgba(124,246,255,.12);

  /* Compactness toggles */
  --pad: 12px;
  --gap: 10px;
  --line: 1.45;
}

